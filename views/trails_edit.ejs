<%- include("partials/header") %>

<div class="container">
	<h1>Edit Trail</h1>
	<form action="/trails/<%= trail._id %>?_method=PUT" method="POST">
	  <div class="form-group">
		<label for="title">Title</label>
		<input type="text" class="form-control" name="title" value="<%= trail.title %>">
	  </div>
	  <div class="form-group">
		<label for="description">Description</label>
		<textarea type="text" class="form-control" name="description" value="<%= trail.description %>"></textarea>
	  </div>
	  <div class="form-group">
		<label for="image">Image of Hike (url)</label>
		<input type="text" class="form-control" name="image" value="<%= trail.image %>">
	  </div>
		<div class="form-group">
		<label for="location">Location</label>
		<input type="text" class="form-control" name="location" value="<%= trail.location %>">
	  </div>
		<div class="form-group">
		<label for="difficulty">Difficulty</label>
		<select class="form-control" id="difficulty" name = "difficulty"  value="<%= trail.difficulty %>">
			<option disabled> -- Choose Below --</option>
			<option <%= trail.difficulty === 'beginner' ? 'selected' : '' %>>beginner</option>
			<option <%= trail.difficulty === 'moderate' ? 'selected' : '' %>>moderate</option>
			<option <%= trail.difficulty === 'advanced' ? 'selected' : '' %>>advanced</option>
		</select>
	  </div>
		<div class="form-group">
		<label for="landscape">Landscape</label>
		<select class="form-control" id="landscape" name = "landscape">
			<option disabled> -- Choose Below --</option>
			<option<%= trail.landscape === 'oceans' ? 'selected' : '' %>>Oceans</option>
			<option <%= trail.landscape === 'mountains' ? 'selected' : '' %>>Mountains</option>
			<option <%= trail.landscape === 'forests' ? 'selected' : '' %>>Forests</option>
			<option <%= trail.landscape === 'plains' ? 'selected' : '' %>>Plains</option>
			<option <%= trail.landscape === 'lakes' ? 'selected' : '' %>>Lakes</option>
		</select>
	  </div>
		<div class="form-group">
		<label for="date">Date Visited</label>
		<input type="date" class="form-control" name="date" value="<%= trail.date %>">
	  </div>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>

<%- include("partials/footer") %>